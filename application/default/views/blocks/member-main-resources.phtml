        <?php endforeach ?>
        <?php foreach ($left_member_links as $u=>$t): ?>
            <li data-title="<?php p(strtolower($t)) ?>"><a href="<?php p($u) ?>"><?php echo $t ?></a></li>
        <?php endforeach ?>
    </ul>

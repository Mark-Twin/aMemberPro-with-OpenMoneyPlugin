                       <?php __e('added by %s', '<strong>' . $this->escape($n->a_name_f || $n->a_name_l ? trim(sprintf('%s %s (%s)', $n->a_name_f, $n->a_name_l, $n->a_login)) : $n->a_login) . '</strong>') ?>
